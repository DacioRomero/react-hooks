{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "lerna run prepare",
    "lint": "eslint --ext .js,.ts packages",
    "prettier:check": "prettier --check \"packages/**/*.ts\" \"packages/**/*.js\"",
    "prettier:write": "prettier --write \"packages/**/*.ts\" \"packages/**/*.js\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "eslint": "^6.1.0",
    "lerna": "^3.16.4",
    "prettier": "^2.6.2"
  }
}
